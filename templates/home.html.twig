{% extends "base.html.twig" %}

{% block title %}Accueil {% endblock %}

{% block container %}
    <div class="row">

        {% for car in cars %}
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <a href="{{ path('product', { 'productId': car.id }) }}"><img class="card-img-top" src="{{ asset('assets/images/' ~ car.image) }}" alt=""></a>
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="{{ path('product', { 'productId': car.id }) }}">{{ car.type }}</a>
                        </h4>
                        <h5>${{ car.price }}</h5>
                        <p class="card-text">{{ car.description }}</p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary" href="{{ path('product', { 'productId': car.id }) }}" role="button">Commander</a>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
    <!-- /.row -->
{% endblock %}


